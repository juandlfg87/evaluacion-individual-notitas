</head>
<body>

    <header>
        <nav>
            <div class="brand-wrapper">
                <div class="logo">
                    <img src="images/logo.svg" alt="">
                </div>
            </div>        
        </nav>
    </header>

    <main>
        <section class="editForm">
            <h1>Editar una nota</h1>
            <form action="<%= '/detail/' + notita.id +'?_method=PUT' %>" method="POST">
                <div>
                    <label for="">TÃ­tulo</label>
                    <input type="text" name="title" value="<%= notita.titulo %>">
                </div>
                <div>
                    <label for="message">Mensaje</label>
                    <textarea name="message" id="message" cols="30" rows="10" ><%= notita.cuerpo %></textarea>
                </div>
                <button type="submit">Editar</button>
            </form>
        </section>
    </main>

</body>
</html>